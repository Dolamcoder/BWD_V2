<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VKU Career Path - Trang cá nhân</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/profile.css">
</head>

<body>
    <!-- Header -->
    <header id="mainHeader">
        <div class="header_logo">
            <a href="#"><img src="/img/logon-removebg-preview.png" alt="VKU Logo"><span>VKU Career Path</span></a>
        </div>
        <div class="header_bar">
            <button id="menuMobile" class="menu_mobile_button"><i class="fa fa-bars"></i></button>
            <div class="menu_mobile" id="menu_mobile">
                <div class="menu_mobile_header">
                    <div class="menu_mobile_logo">
                        <a href="#"><img src="/img/logon-removebg-preview.png" alt="VKU Logo"><span>VKU Career
                                Path</span></a>
                    </div>
                    <button id="closeMenuMobile" class="menu_mobile_close"><i class="fa fa-times"></i></button>
                </div>
                <div class="menu_mobile_item">
                    <li><a href="/">Trang chủ</a></li>
                    <li><a href="/advise">Tư vấn ngành</a></li>
                    <li><a href="#">Mô tả ngành</a></li>
                    <li><a href="#">Lộ trình học tập</a></li>
                    <li><a href="#">Cộng đồng</a></li>
                    <li><a href="/login">Đăng nhập</a></li>
                </div>
            </div>
        </div>
        <div class="header_menu">
            <ul>
                <li><a href="/">Trang chủ</a></li>
                <li><a href="/advise">Tư vấn ngành</a></li>
                <li><a href="#">Mô tả ngành</a></li>
                <li><a href="#">Lộ trình học tập</a></li>
                <li><a href="#">Cộng đồng</a></li>
            </ul>
        </div>
        <div class="logIn_signUp">
            <button id="loginButton">
                <a href="/login"><i class="fa fa-user"></i><span> Đăng nhập</span></a>
            </button>
        </div>
        <div class="avartar">
            <button class="avartarButton"><img src="/img/avartar.jpg" alt=""></button>
            <div class="dropdown-content dropdownMenuAvartar">
                <a href="/profile">Trang cá nhân</a>
                <a href="/login" class="logout">Đăng xuất</a>
            </div>
            <span class="userName" data-name="<%= user ? user.name : '' %>"></span>
        </div>
    </header>
    <header id="scroll">
        <div class="header_logo">
            <a href="#"><img src="/img/logon-removebg-preview.png" alt="VKU Logo"><span>VKU Career Path</span></a>
        </div>
        <div class="header_bar">
            <button id="menuMobileScroll" class="menu_mobile_button"><i class="fa fa-bars"></i></button>
            <div class="menu_mobile" id="menu_mobile_scroll">
                <div class="menu_mobile_header">
                    <div class="menu_mobile_logo">
                        <a href="#"><img src="/img/logon-removebg-preview.png" alt="VKU Logo"><span>VKU Career
                                Path</span></a>
                    </div>
                    <button id="closeMenuMobileScroll" class="menu_mobile_close"><i class="fa fa-times"></i></button>
                </div>
                <div class="menu_mobile_item">
                    <li><a href="/">Trang chủ</a></li>
                    <li><a href="#">Tư vấn ngành</a></li>
                    <li><a href="#">Mô tả ngành</a></li>
                    <li><a href="#">Lộ trình học tập</a></li>
                    <li><a href="#">Cộng đồng</a></li>
                </div>
            </div>
        </div>
        <div class="header_menu">
            <ul>
                <li><a href="/">Trang chủ</a></li>
                <li><a href="/advise">Tư vấn ngành</a></li>
                <li><a href="#">Mô tả ngành</a></li>
                <li><a href="#">Lộ trình học tập</a></li>
                <li><a href="#">Cộng đồng</a></li>
            </ul>
        </div>
        <div class="logIn_signUp">
            <button id="loginButton">
                <a href="/login"><i class="fa fa-user"></i><span> Đăng nhập</span></a>
            </button>
        </div>
        <div class="avartar">
            <button class="avartarButton"><img src="/img/avartar.jpg" alt=""></button>
            <div class="dropdown-content dropdownMenuAvartar">
                <a href="/profile">Trang cá nhân</a>
                <a href="/login" class="logout">Đăng xuất</a>
            </div>
            <span class="userName" data-name="<%= user ? user.name : '' %>"></span>
        </div>
    </header>

    <!-- Profile Content -->
    <div class="container-fluid p-0">
        <!-- ảnh nền to hcn phía sau prf -->
        <div class="profile-cover"></div>

        <!-- thông tin prf -->
        <div class="container">

            <section class="row">
                <div class="col-md-3">
                    <div class="profile-avatar">
                        <button><img src="/img/avartar.jpg" class="img-fluid rounded-circle border border-white shadow"
                                alt="Profile Avatar"></button>

                    </div>
                    <div class="profile-name">
                        <h5 class="font-weight-bold mb-0">Thành Quang</h5>
                    </div>
                </div>
                <div class="col-md-9 d-flex align-items-end">
                    <div class="profile-edit mb-3 ml-auto">
                        <button class="btn btn-outline-secondary mr-2">
                            <i class="edit-icon fas fa-pencil-alt mr-1 d-none d-md-inline"></i>
                            <span class="d-none d-md-inline">Chỉnh sửa trang cá nhân</span>
                            <i class="edit-icon-mobile fas fa-pencil-alt mr-1 d-inline d-md-none"></i>
                        </button>
                    </div>
                </div>
            </section>

            <!-- menu profile -->
            <section class="row">
                <div class="col-12">
                    <div class="profile-nav d-flex">
                        <a href="#" class="profile-nav-item active">Bài viết</a>
                        <a href="#" class="profile-nav-item">Dự án cá nhân</a>
                    </div>
                </div>
            </section>

            <!-- Profile content -->
            <section class="row profile-content">
                <!-- col trái -->
                <div class="col-md-4">
                    <!-- giới thiệu -->
                    <div class="profile-card">
                        <div class="profile-card-header">
                            Giới thiệu
                        </div>
                        <div class="profile-card-body">
                            <div class="intro-item">
                                <i class="fas fa-briefcase intro-icon"></i>
                                <span>Học tập tại Đại học Đà Nẵng - Đại học Công nghệ thông tin và Truyền thông Việt -
                                    Hàn (VKU)</span>
                            </div>
                            <div class="intro-item">
                                <i class="fas fa-home intro-icon"></i>
                                <span>Sống tại Đà Nẵng</span>
                            </div>
                            <div class="intro-item">
                                <i class="fas fa-map-marker-alt intro-icon"></i>
                                <span>Đến từ Đà Nẵng</span>
                            </div>
                            <div class="intro-item">
                                <i class="fas fa-clock intro-icon"></i>
                                <span>Tham gia vào tháng 5 năm 2025</span>
                            </div>
                        </div>
                    </div>

                    <!-- Các nhóm đã tham gia Card -->
                    <section class="profile-card">
                        <div class="profile-card-header d-flex justify-content-between align-items-center">
                            <span>Nhóm tham gia</span>
                            <a href="#" class="text-primary">Xem tất cả các nhóm</a>
                        </div>
                        <div class="profile-card-body">
                            <div class="row">
                                <div class="col-3 mb-2">
                                    <img src="/img/avartar.jpg" class="img-fluid rounded" alt="CNTT Group">
                                    <span class="d-block">Nhóm CNTT</span>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- bạn bè -->
                    <section class="profile-card">
                        <div class="profile-card-header d-flex justify-content-between align-items-center">
                            <span>Bạn bè</span>
                            <a href="#" class="text-primary">Xem tất cả bạn bè</a>
                        </div>
                        <div class="profile-card-body">
                            <div class="row">
                                <div class="col-3 mb-3 friend-item">
                                    <img src="/img/avartar.jpg" class="friend-avatar" alt="Friend">
                                    <div class="friend-name">Đỗ Lam</div>
                                </div>
                                <div class="col-3 mb-3 friend-item">
                                    <img src="/img/avartar.jpg" class="friend-avatar" alt="Friend">
                                    <div class="friend-name">Quốc Anh</div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>

                <!-- col phải -->
                <section class="col-md-8">
                    <!-- tạo status mới -->
                    <div class="profile-card mb-4">
                        <div class="post-header">
                            <img src="/img/avartar.jpg" class="post-avatar" alt="User">
                            <div>
                                <div class="post-user">Thành Quang</div>
                            </div>
                        </div>
                        <div class="profile-card-body">
                            <textarea class="form-control" rows="3" placeholder="Hãy nói gì đi.."></textarea>
                        </div>
                        <div class="post-actions">
                            <button class="btn btn-light">
                                <i class="fas fa-camera text-danger"></i> Ảnh/Video
                            </button>
                            <button class="btn btn-primary">Đăng</button>
                        </div>
                    </div>

                    <!-- status cũ -->
                    <div class="profile-card post">
                        <div class="post-header">
                            <img src="/img/avartar.jpg" class="post-avatar" alt="User">
                            <div>
                                <div class="post-user">Thành Quang</div>
                                <div class="post-time">3 giờ trước</div>
                            </div>
                        </div>
                        <div class="post-content">
                            <p>avatar đệp k mấy bạn</p>
                            <img src="/img/avartar.jpg" class="img-fluid rounded" alt="Post Image">
                        </div>
                        <div class="post-actions">
                            <a href="#" class="post-action"><i class="far fa-thumbs-up mr-1"></i> Thích</a>
                            <a href="#" class="post-action"><i class="far fa-comment mr-1"></i> Bình luận</a>
                            <a href="#" class="post-action"><i class="fas fa-share mr-1"></i> Chia sẻ</a>
                        </div>
                    </div>

                    <div class="profile-card post">
                        <div class="post-header">
                            <img src="/img/avartar.jpg" class="post-avatar" alt="User">
                            <div>
                                <div class="post-user">Thành Quang</div>
                                <div class="post-time">1 ngày trước <i class="fas fa-globe-americas"></i></div>
                            </div>
                        </div>
                        <div class="post-content">
                            <p>Mới xong được cái đồ án cơ sở 1</p>
                        </div>
                        <div class="post-actions">
                            <a href="#" class="post-action"><i class="far fa-thumbs-up mr-1"></i> Thích</a>
                            <a href="#" class="post-action"><i class="far fa-comment mr-1"></i> Bình luận</a>
                            <a href="#" class="post-action"><i class="fas fa-share mr-1"></i> Chia sẻ</a>
                        </div>
                    </div>
                </section>
            </section>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>

    <script src="/JavaScript/advise.js"></script>
    <script src="/JavaScript/header.js"></script>
    <script src="/JavaScript/checkStatuslogin.js"></script>
    <script src="/JavaScript/avartar.js"></script>
</body>

</html>